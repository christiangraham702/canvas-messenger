{
  "manifest_version": 3,
  "name": "Canvas Messenger",
  "version": "0.1.0",
  "description": "Automates sending message to a whole class in Canvas.",
  "action": { "default_popup": "popup.html" },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
