{
  "manifest_version": 3,
  "name": "CourseLynx",
  "version": "0.1.1",
  "description": "Automates sending message to a whole class in Canvas.",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": { "default_popup": "popup.html" },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://canvas.wisc.edu/*",
    "https://webcourses.ucf.edu/*",
    "https://bruinlearn.ucla.edu/*",
    "https://fsu.canvas.edu/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": [
      "https://*.instructure.com/*",
      "https://canvas.wisc.edu/*",
      "https://webcourses.ucf.edu/*",
      "https://bruinlearn.ucla.edu/*",
      "https://canvas.fsu.edu/*",
      "https://*.fsu.edu/*",
      "https://canvas.tamu.edu/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
